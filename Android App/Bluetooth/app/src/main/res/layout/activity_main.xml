<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hannahkwon.bluetooth1.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:drawable/divider_horizontal_textfield"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Bluetooth is off"
            android:id="@+id/txt_BtStatus"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:columnCount="3">

            <Switch
                android:text="Sensor 1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/switch_DS1Ctrl"
                android:textSize="16sp"
                android:padding="8dp" />

            <Switch
                android:text="Sensor 2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/switch_DS2Ctrl"
                android:textSize="16sp"
                android:padding="8dp" />

            <Switch
                android:text="Sensor 3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/switch_DS3Ctrl"
                android:textSize="16sp"
                android:padding="8dp" />

            <Switch
                android:text="Sensor 4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/switch_DS4Ctrl"
                android:textSize="16sp"
                android:padding="8dp" />

            <Switch
                android:text="Sensor 5"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/switch_DS5Ctrl"
                android:textSize="16sp"
                android:padding="8dp" />

            <Switch
                android:text="Sensor 6"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/switch_DS6Ctrl"
                android:textSize="16sp"
                android:padding="8dp" />

            <Switch
                android:text="Sensor 7"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/switch_DS7Ctrl"
                android:textSize="16sp"
                android:padding="8dp" />

            <Switch
                android:text="Sensor 8"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/switch_DS8Ctrl"
                android:textSize="16sp"
                android:padding="8dp" />

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

        <TextView
            android:text="Sensor sent:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txt_DataReceived" />
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">

            <Button
                android:text="Refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_Refresh"
                android:layout_alignParentLeft = "true"/>

            <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_Save"
                android:layout_alignParentRight = "true"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
